@model IEnumerable<Blok1.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1 class="Product">Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary btn-color">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th class="tableheader">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th class="tableheader">
                @Html.DisplayNameFor(model => model.Comment)
            </th>
            <th class="tableheader">
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th class="tableheader">
                @Html.DisplayNameFor(model => model.ColorChange)
            </th>
            <th class="tableheader"></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td class="tabledata">
                @Html.DisplayFor(modelItem => item.Name)
            </td>

            <td class="tabledata">
                @Html.DisplayFor(modelItem => item.Comment)
            </td>

            <td class="tabledata">
                @Html.DisplayFor(modelItem => item.Price)
            </td>

            <td class ="tabledata">
                @Html.DisplayFor(modelItem => item.ColorChange)
            </td>

            <td class ="tabledata">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-color">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-color">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-primary btn-color">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
