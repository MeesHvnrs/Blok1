@model Blok1.Models.Product

@{
    ViewData["Title"] = "Create";
}

<h1 class="Product">Create a new product</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label whitetext"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Comment" class="control-label whitetext"></label>
                <input asp-for="Comment" class="form-control" />
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Price" class="control-label whitetext"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group form-check whitetext">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ColorChange" /> @Html.DisplayNameFor(model => model.ColorChange)
                </label>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary btn-color" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
